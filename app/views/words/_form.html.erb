<%= form_for([@category,@word]) do |f| %>
<%= hidden_field_tag :category_id, params[:category_id] %>
  <% if @word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
      <% @word.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :word %><br>
    <%= f.text_field :word %>
  </div>

  <div class="field">
    <%= f.label :sentence %><br>
    <%= f.check_box :sentence %>
  </div>

  <div class="field">
    <%= f.label :spanish %><br>
    <%= f.text_field :spanish %>
  </div>

  <div class="field">
    <%= f.label :french %><br>
    <%= f.text_field :french %>
  </div>

  <div class="field">
    <%= f.label :german %><br>
    <%= f.text_field :german %>
  </div>
  


  <div class="field">
    <p class="large-font">Choose the categories associated with this word</p>
  <% for category in Category.all %>
      <label class="checkbox inline col-xs-2">
        <%= check_box_tag 'word[category_ids][]', category.id, @word.categories.include?(category) %>
        <%= link_to category.category, category_path(category) %>
      </label>
    <% end %>
  </div>
  <div class="clearfix"></div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
