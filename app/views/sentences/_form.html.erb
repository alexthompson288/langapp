<%= form_for(@sentence) do |f| %>
  <% if @sentence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sentence.errors.count, "error") %> prohibited this sentence from being saved:</h2>

      <ul>
      <% @sentence.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :sentence %><br>
    <%= f.text_area :sentence, size: "80x2" %>
  </div>

  <div class="field">
    <%= f.label :spanish %><br>
    <%= f.text_area :spanish %>
  </div>

  <div class="field">
    <%= f.label :french %><br>
    <%= f.text_area :french %>
  </div>

  <div class="field">
    <%= f.label :german %><br>
    <%= f.text_area :german %>
  </div>
  <div class="field">
    <p class="large-font">Choose the themes associated with this word</p>
  <% for category in Category.all %>
      <label class="checkbox inline one column height-one-fifty">
        <%= check_box_tag 'sentence[category_ids][]', category.id, @sentence.categories.include?(category) %>
        <%= link_to category.category, category_path(category) %>
      </label>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
